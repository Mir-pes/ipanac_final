{
  "version": 2,
  "builds": [
    { "src": "IPANAC_Final/dist/**", "use": "@vercel/static" }, // Serve static React build
    { "src": "IPANAC_Final/api/index.js", "use": "@vercel/node" } // Serve API
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "IPANAC_Final/api/index.js" }, // API routes
    { "src": "/(.*)", "src": "IPANAC_Final/dist/$1" }, // Serve static files
    { "src": "/", "dest": "IPANAC_Final/dist/index.html" } // Serve React app root
  ]
}
